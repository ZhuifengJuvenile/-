/* components/hui-popup.wxss */

.hui-popup-mask {
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
  position: fixed;
  left: 0;
  top: 0;
  z-index: 998;
  
}

.hui-popup-top {
  padding: 6px;
  right: 0px;
  top: 0px;
  position: absolute;
  z-index: 999;
}
.hui-popup-middle{
    position: absolute;
		top: 50%;
		left: 50%;
		transform: translate(-50%, -50%);
     z-index: 999; 
}
.hui-popup-bottom{
 padding: 6px;
  right: 0px;
  bottom: 0px;
  position: absolute;
  z-index: 999;
}